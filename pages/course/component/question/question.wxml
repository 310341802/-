<view class="blockq">
  <view class="headq">任务</view>
  
  <view class="row" wx:for="{{taskq}}" catchtap="toExams">
    <view class="row-con">
      <view class="img">
        <image src="/img/file/link.png"></image>
      </view>
      <view class="desc">
        <view class="title">{{item.title}}</view>
        <view class="statement f" wx:if="{{item.state == 0}}">未完成</view>
        <view class="statement t" wx:if="{{item.state == 1}}">已提交</view>
        <view class="statement score" wx:if="{{item.state == 1}}">得分：{{item.score}}</view>
      </view>
      
    </view>
  </view>
</view>
<view class="null" wx:if="{{taskq.length == 0}}">空空如也</view>